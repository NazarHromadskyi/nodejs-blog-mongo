{
  "env": {
    "commonjs": true,
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-underscore-dangle": "off",
    "import/extensions": [0, { "<js>": "always" }],
    "import/prefer-default-export": "off",
    "indent": [
      "warn",
      4,
      { "SwitchCase": 1 }
    ],
    "no-use-before-define": "off",
    "global-require": "off"
  }
}
